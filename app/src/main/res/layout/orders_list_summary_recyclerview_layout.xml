<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DateDisplayLinearLayout"
        android:padding="15dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Date"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/DateDisplayTextView"
            android:background="#A9A9A9"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ExpandableLayout"
        android:layout_marginBottom="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="till time/Date"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/tillTimeTextView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Orders"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:id="@+id/TotalOrdersTextView"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/ViewOrderDetailsForCurrentDateButton"/>


    </LinearLayout>

</LinearLayout>