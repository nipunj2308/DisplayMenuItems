<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TableRow
        android:background="@drawable/table_style"
        android:padding="3dp">
        <TextView
            android:id="@+id/ItemSoldRecyclerViewItemname"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="itemName"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16dp"
            android:background="#FEF5E7"
            />
        <TextView
            android:id="@+id/ItemSoldRecyclerViewItemPrice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Price"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/ItemSoldRecyclerViewItemRevenue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Revenue"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/ItemSoldRecyclerViewItemCounter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Counter No"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16dp"
            />


    </TableRow>

</TableLayout>